<body id="inicioUsuario">
    <header class="headerSidebar">
        <nav class="navigation">
            <a href="inicioUsuarioRegistrado.html"><button class="botonLogin" id="botonRegistro"> Cancelar </button></a>
        </nav>
    </header>
    <nav class="sidebar close"> 
        <header>
           <div class="image-text">
                <span class="image">
                    <img src="images/logo.png" alt="logo" />
                </span>
                <div class="text header-text">
                    <span class="name"> Bienvenido</span>
                    <span class="profession">nombreUsuario</span>
                    
                </div>
           </div> 
           <i class='bx bx-chevron-right toggle'></i>
           
        </header>
        <div class="menu-bar"> 
            <div class="menu">
                <li class="search-box">
                    <i class="bx bx-search icon"></i>
                    <input type="search" placeholder="Search...">
                </li>
                <ul class="menu-links">
                    <li class="nav-link">
                        <a href="EnviaDinero.html">
                            <i class='bx bxs-check-square'></i>
                            <span class="text nav-text">EnviaDinero</span>
                        </a>
                    </li>
                    <li class="nav-link">
                        <a href="inicioInvitado.html">
                            <i class='bx bxs-x-circle'></i>
