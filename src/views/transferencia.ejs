<%- include("header", {}) %>
    <div class = "contenidoInicioUsuario">
        <!-- contiene todo -->
        <div class="wrapper" id="inicioBizum"> 
            <div class="acciones">
                <br>
               <p>Bienvenido <%= user.username %> al apartado "Transferencia", donde podrá enviar dinero rápidamente
                a sus contactos
               </p>
            </div>
            <div class="form-box bizum">
                <h2>Transferencia</h2>
                <h4> Rellene los siguientes campos: </h4>
                <form method="post" id="formTransferencia">
                    <div class="input-box">
                        <span class="icon"></span>
                        <input id="nombre" name="receptor" required/>
                        <label type="text">Nombre</label>
                    </div>
                    <div class="input-box">
                        <span class="icon"></span>
                        <input type="text" id = "cantidad" name="cantidad" required/>
                        <label>Cantidad</label>
                    </div>
                    <div class="input-box">
                        <span class="icon"></span>
                        <input type="text" id = "Asunto" required/>
                        <label>Asunto</label>
                    </div>
                    <div class="envioBizum"> 
                        <button type="submit" class="boton"> Enviar </button>
                        <div class="saldoRestante">
                            Saldo: <%=user.saldo%> $
                        </div>
                    </div>
                </form>
            </div>
            <div class="oferta"> <%=mensaje%></div>
        </div>
    </div>
</body>
</html>