<%- include("header", {}) %>
    <div id="containerAdmin">
        <nav class="navAdmin">
            <div class="side_navbar">
            <span>Main Menu</span>
            <a href="interfazAdmin" class="active">Inicio</a>
            <a href="PanelControl">Panel de usuarios</a>
            <a href="validarTransacciones">Validar Transacciones</a>
            <a href="/logout"> Cerrar Sesión </a>

            <div class="links">
                <span>Quick Link</span>
                <a href="/logout">LogOut</a>
            </div>
            </div>
        </nav>
        <div class="main-body">
            <h2>Dashboard</h2>
            <div class="promo_card">
            <h1>Welcome to SBank</h1>
            <span>Gestiona la información de la aplicación</span>
            <button>Learn More</button>
            </div>
    
            <div class="history_lists">
            <div class="list1">
                <div class="row">
                <h4>History</h4>
                <a href="#">See all</a>
                </div>
                <table class="tableAdmin">
                <thead>
                    <tr>
                    <th>id</th>
                    <th>Since</th>
                    <th>Username</th>
                    <th>Número</th>
                    <th>Saldo</th>
                    </tr>
                </thead>
                <% i = 0;%>
                <% usuarios.forEach((username)=>{ %>
                    <% if (i < 6) {%> 
                <tbody>
                    <tr>
                    <td><%= username.dataValues.id%></td>
                    <td><%= username.dataValues.createdAt.toLocaleDateString("es-ES")%></td>
                    <td><%= username.dataValues.username %></td>
                    <td><%= username.dataValues.phoneNumber %></td>
                    <td><%= username.dataValues.saldo %></td>
                    </tr>
                </tbody>
                <% } %>
                <% i++ %>
                <% }) %>
                </table>
            </div>
    
            <div class="list2">
                <div class="row">
                <h4>Logs</h4>
                <a href="#">Upload</a>
                </div>
                <table class="tableAdmin">
                <thead>
                    <tr>
                    <th>#</th>
                    <th>Tipo</th>
                    <th>Remitente</th>
                    <th>Destinatario</th>
                    <th>Cantidad</th>
                    <th>Fecha</th>
                    </tr>
                </thead>
                <% i = 0; %>
                <% transacciones.forEach((transaccion)=>{ %>
                    <% if (i < 6) {%> 
                <tbody>
                    <tr>
                    <td><%= transaccion.dataValues.id%></td>
                    <td><%= transaccion.dataValues.tipo%></td>
                    <td><%= transaccion.dataValues.emisor %></td>
                    <td><%= transaccion.dataValues.receptor %></td>
                    <td><%= transaccion.dataValues.cantidad %></td>
                    <td><%= transaccion.dataValues.fecha.toLocaleDateString("es-ES")%></td>
                    </tr>
                </tbody>
                <% } %>
                <% i++ %>
                <% }) %>
                </table>
            </div>
            </div>
        </div>
    
        <%- include("footer", {}) %>
    </body>
    </html>

    